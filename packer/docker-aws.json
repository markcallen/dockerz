{
  "variables": {
    "aws_default_region": "{{env `AWS_DEFAULT_REGION`}}",
    "aws_vpc_id": "{{env `AWS_VPC_ID`}}",
    "aws_subnet_id": "{{env `AWS_SUBNET_ID`}}",
    "aws_security_group_id": "{{env `AWS_SECURITY_GROUP_ID`}}",
    "pwd": "{{env `PWD`}}"
  },
  "builders": [
    {
      "ami_name": "marka {{isotime \"2006-01-02-150405\"}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "instance_type": "t2.small",
      "region": "{{user `aws_default_region`}}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "source_ami_filter": {
        "filters": {
          "name": "*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "ssh_username": "ubuntu",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "18.04"
      },
      "type": "amazon-ebs",
      "security_group_ids": [ "{{user `aws_security_group_id`}}" ]
    }
  ],
  "post-processors": null,
  "provisioners": [
    {
      "destination": "/tmp/docker.options",
      "source": "{{user `pwd`}}/docker.options",
      "type": "file"
    },
    {
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "rm /var/lib/apt/lists/lock",
        "rm /var/cache/apt/archives/lock",
        "rm /var/lib/dpkg/lock",
        "dpkg --configure -a",
        "apt-get update",
        "apt-get remove docker docker-engine docker.io containerd runc",
        "rm -f /var/lib/docker/",
        "apt-get install -y --allow-unauthenticated apt-transport-https gnupg-agent software-properties-common curl ca-certificates",
        "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -",
        "add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\"",
        "apt-get update",
        "apt-get -y install docker-ce docker-ce-cli containerd.io",
        "usermod -aG docker ubuntu",
        "mkdir -p /etc/systemd/system/docker.service.d",
        "mv /tmp/docker.options /etc/systemd/system/docker.service.d/override.conf",
        "systemctl enable docker",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y python python-requests"
      ],
      "type": "shell"
    }
  ]
}
